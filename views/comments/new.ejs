<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Add new comment to <%=campground.name%></h1>
    
           <form action="/campgrounds/<%=campground._id%>/comments" method="POST" class="formCenter">
               <div class="form-group">
                   <input class="form-control" type="text" placeholder="text" name="comment[text]">
               </div>
               
               <div class="form-group">
                   <input class="form-control" type="text" placeholder="author" name="comment[author]">
               </div>
            
               
               <div class="form-group">
                   <button class="btn btn-primary btn-lg btn-block">Submit!</button>
               </div>
                    <a href="/campgrounds">Go Back</a>
           </form>
    
             
    </div>
        
</div>


<% include ../partials/footer %>